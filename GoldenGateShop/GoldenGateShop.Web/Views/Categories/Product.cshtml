@model GoldenGateShop.Web.ViewModels.Categories.ProductViewModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Product";
}
<div class="container body-content">
    <div class="col-md-12">
        <h2 class="text-center">@this.Model.Name</h2>
    </div>
    <div class="col-md-4">
        @if (this.Model.Picture == null)
        {

            <img src="~/Images/noimage.jpg" />
        }
        else
        {
            <img src="@this.Model.Picture" alt="" width="300"/>
        }
    </div>
    <div class="col-md-8">
        <p>
            <h3>

                @if (this.Model.Description != null)
                {
                    <span>@this.Model.Description</span>
                }

            </h3>
        </p>
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        Characteristic
                    </th>
                    <th>
                        Value
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var characteristic in this.Model.ProductCharacteristics)
                {
                    <tr>
                        <td>
                            @characteristic.Name
                        </td>
                        <td>
                            @characteristic.Description
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="btn btn-success">Add to chart</div>
        @if (User.IsInRole("Administrator"))
        {
            <div class="btn btn-warning" onclick="javascript:window.location='/Administration/ProductsAdmin/Edit/@this.Model.Id'">
                Edit
            </div>
            <div class="btn btn-danger" onclick="javascript:window.location='/Administration/ProductsAdmin/Delete/@this.Model.Id'">
                Delete
            </div>
        }
    </div>
</div>