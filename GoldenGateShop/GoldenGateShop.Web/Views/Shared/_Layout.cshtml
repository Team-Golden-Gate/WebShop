<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Images/img-thing.jpg" width="52" />
                @Html.ActionLink("Golden Gate Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li @(ViewBag.Location == "Index" ? "class=active" : "")>
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)
                    </li>
                    <li @(ViewBag.Location == "About" ? "class=active" : "")>
                        @Html.ActionLink("About", "About", "Home", new { area = "" }, null)
                    </li>
                    <li @(ViewBag.Location == "Contact" ? "class=active" : "")>
                        @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)
                    </li>

                    @{Html.RenderAction("Menu", "Home", new { location = this.ViewBag.Location, area = "" });}

                    <li class="@(ViewBag.Location == "Cart" ? "active" : "")">
                        @Html.ActionLink("Cart", "Index", "Cart", new { area = "" }, null)
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    @RenderBody()
    <hr />
    <div class="container body-content">
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
